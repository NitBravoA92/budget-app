<section class="page" id="splash-screen">
  <div class="container">
    <div class="content-row">
      <%= image_tag 'app-logo.png', class: 'logo-app' %>
      <h1 class="text-3xl font-bold underline">YouPayment</h1>
    </div>
    <% unless user_signed_in? %>
      <div class="content-row" id="session-links">
        <div class="full-button">
          <%= link_to 'Log In', new_user_session_path, class: 'btn-primary' %>
        </div>
        <div class="full-button">
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</section>
