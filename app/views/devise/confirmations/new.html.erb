<section class="pt-16 w-full h-screen bg-zinc-100 flex flex-col justify-between" id="resent-confirmation">
  <div class="container mx-auto h-full flex flex-col">
    <div class="content-row w-full">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <%= generate_auth_navigation(f) %>

        <div class="w-full mt-4 pl-4 flex flex-col items-center bg-white border-y-2 border-zinc-300">
          <div class="w-full">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), required: true, placeholder: 'Email', class: 'w-full border-none py-4 pr-1 text-text_color' %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</section>
